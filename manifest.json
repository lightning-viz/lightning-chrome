{
  "manifest_version": 2,
  "name": "Lightning Viz",
  "version": "1.0.2",
  "description": "preview lightning visualizations",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png", 
      "38": "icons/icon38.png"
    },
    "default_title": "Lightning (Click to preview this repo)"
  },
  "background": { "scripts": ["js/background.js"] },
  "options_page": "options/index.html",
  "permissions": [
    "tabs",
    "storage"
  ]

}